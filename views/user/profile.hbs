<h2>Te damos la bienvenida, {{user.username}}</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Tus actividades</h3>
            <ul>
                {{#each activities}}
                <li><a href="/activities/{{this._id}}">{{this.name}}</a></li>
                {{/each}}
            </ul>
    </div>
    <div class="col-md-6">
        <h3>Tus monumentos</h3>

                    <ul>
                        {{#each user.monuments}}
                        <li><a href="/monuments/{{this._id}}">{{this.title}}</a></li>
                        {{/each}}
                    </ul>
    </div>
</div>