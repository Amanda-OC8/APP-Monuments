<div class="row justify-content-center">
    <div class="col-md-10">

        <div class="card">
            <div class="card-body">

                <h5 class="card-title">{{name}}</h5>
                <h6 class="card-subtitle mb-2 text-subt">Tipo: {{actType}}</h6>
                <div class="row">
                    <div class="col-sm-4">
                        <img class="act-detail-img" src="{{imgURL}}" alt="Imagen fondo negro con interrogaciones">
                    </div>

                    <div class="col-sm-8">

                        <p class="card-text">Descripción: {{longDescription}}.</p>
                        <p>Edades: de {{minAge}} a {{maxAge}} años.</p>
                        <p>Número de participantes: de {{minParticipants}} a {{maxParticipants}} personas.</p>

                        {{#if materials.length}}
                        <p>Materiales necesarios: {{materials}}</p>
                        {{/if}}

                        {{#if monuments.length}}
                        <p>Monumentos donde se puede realizar</p>
                        <ul> 
                            {{#each monuments}}
                            <li><a href="/monuments/{{this._id}}">{{this.title}}</a></li>
                            {{/each}}
                        </ul>
                        {{/if}}

                    </div>
                </div>
     
                <a href="/activities/edit/{{_id}}" class="btn btn-edit btn-block">Editar</a>
                <a href="/activities/delete/{{_id}}" class="btn btn-danger btn-block">Eliminar</a>
            </div>
        </div>
        <a href="/activities" class="btn btn-edit btn-block">Volver al índice de actividades</a>

    </div>

</div>
