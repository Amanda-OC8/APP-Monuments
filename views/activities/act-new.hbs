<h3>Crea una nueva actividad</h3>

<form action='/activities/new' method='POST'>

        <div class='form-group'>
            <label><strong>Nombre:</strong></label>
            <input type='text' name='name' required>
        </div>	

        <div class='form-group'>
            <label><strong>Tipo de actividad:</strong> </label>
            <select name='actType' required> 
                <option value="Busqueda">Búsqueda</option>
                <option value="Carrera">Carrera</option>
                <option value="Pistas">Pistas</option>
                <option value="Trivial">Trivial</option>
            </select>
        </div>

        <div class='form-group'>
            <label><strong>Descripción corta: </strong></label>
            <input type='text' name='shortDescription' required>
        </div>
                
        <div class='form-group'>
            <label><strong>Descripción larga:</strong> </label> <br>
            <textarea rows = "5" name='longDescription'></textarea>
        </div>
        

        <div class='form-group'>
            <label><strong>Participantes:</strong> </label><br>
            <label>Mínimo: </label><input class="form-num" type='number' name='minParticipants' required> <label>Máximo: </label><input class="form-num" type='number' name='maxParticipants' required>
        </div>

         <div class='form-group'>
            <label><strong>Edades recomendadas:</strong> </label><br>
            <label>Mínima: </label><input class="form-num" type='number' name='minAge' required>
            <label>Máxima: </label><input class="form-num" type='number' name='maxAge' required>
        </div>


        <div class='form-group'>
            <label><strong>Materiales necesarios, separados por comas:</strong> </label>
            <input type='text' name='materials'>
        </div>

        <div class='form-group row'>
            <label><strong>Monumento(s) donde se puede realizar.</strong> Puedes seleccionar varios</label><br>
            {{#each allMonuments}}
            <div class="col-sm-12">
                <input type="checkbox" name="monuments" value="{{_id}}"> {{title}}
            </div>

            {{/each}}

        </div>
        


    <button type='submit' class='btn btn-edit btn-block'>Crear</button>
</form>