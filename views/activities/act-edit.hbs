<h3>Editar la actividad {{name}}</h3>

<form action='/activities/edit/{{_id}}' method='POST'>

        <div class='form-group'>
            <label><strong>Nombre:</strong></label>
            <input type='text' name='name' value="{{name}}">
        </div>	

        <div class='form-group'>
            <label><strong>Tipo de actividad:</strong> </label>
            <select name='actType'> 
                <option value="Busqueda">Búsqueda</option>
                <option value="Carrera">Carrera</option>
                <option value="Pistas">Pistas</option>
                <option value="Trivial">Trivial</option>
            </select>
        </div>

        <div class='form-group'>
            <label><strong>Descripción corta: </strong></label>
            <input type='text' name='shortDescription' value="{{shortDescription}}">
        </div>
                
        <div class='form-group'>
            <label><strong>Descripción larga:</strong> </label> <br>
            <textarea rows = "5" cols = "40" name='longDescription'>{{longDescription}}</textarea>
        </div>
        

        <div class='form-group'>
            <label><strong>Participantes:</strong> </label><br>
            <label>Mínimo: </label><input class="form-num" type='number' name='minParticipants' value="{{minParticipants}}"> <label>Máximo: </label><input class="form-num" type='number' name='maxParticipants' value="{{maxParticipants}}">
        </div>

         <div class='form-group'>
            <label><strong>Edades recomendadas:</strong> </label><br>
            <label>Mínima: </label><input class="form-num" type='number' name='minAge' value="{{minAge}}">
            <label>Máxima: </label><input class="form-num" type='number' name='maxAge' value="{{maxAge}}">
        </div>

        <div class='form-group'>
            <label><strong>Materiales necesarios, separados por comas:</strong> </label>
            <input type='text' name='materials' value="{{materials}}">
        </div>


    <button type='submit' class='btn btn-info'>Editar</button>
</form>